{% for article in posts %}
  <article class="article-pagination col-md-4">
    {% if article.thumbnail.src %}
    <a href="{{article.link}}" class="col-md-12 col-xs-12 post-image" style="background-image:url({{article.thumbnail.src('large')}})">
    </a>
    {% endif %}
    <div class="row">
      <div class="col-md-1 col-sm-1 col-xs-1"></div>
      <div class="col-md-10 col-sm-10 col-xs-10 post-content">
        <a href="{{article.link}}"><h3>{{article.title}}</h3></a>
        <p class="meta">{{article.post_date|date('j F Y')}} Â· by {{article.author.name}}</p>
        <p class="post-preview">{{article.get_preview(wordCount)}}</p>
        <div class="col-md-1 col-sm-1 col-xs-1"></div>
      </div>
      <div>
</article>
{% endfor %}
